{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "ESNext",
    "types": ["./node_modules/vite/client", "./node_modules/vite-plugin-svgr/client"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/declarations.d.ts", "src/mock", "index.tsx"]
}
