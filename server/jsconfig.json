{
  "compilerOptions": {
    "baseUrl": "src",
    "module": "ESNext",
    "target": "ESNext",
    "checkJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/node_modules/*"]
}
