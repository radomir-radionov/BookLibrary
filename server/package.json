{
  "name": "server",
  "version": "1.0.0",
  "description": "Koa App Description",
  "main": "src/index.mjs",
  "scripts": {
    "start": "nodemon src/index.mjs",
    "stop": "docker compose down",
    "stop:force": "docker compose down -v",
    "docker:up": "docker compose up -d",
    "docker:rs": "docker compose down && docker compose up -d --build && docker attach app_worker_server",
    "docker:down": "docker compose down",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed:up": "npx sequelize-cli db:seed:all",
    "db:seed:down": "npx sequelize-cli db:seed:undo "
  },
  "author": "Radomir R",
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "^4.0.0",
    "dotenv": "^16.3.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "koa-router": "^12.0.0",
    "pg": "^8.11.1",
    "sequelize": "^6.32.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "sequelize-cli": "^6.6.1"
  }
}
